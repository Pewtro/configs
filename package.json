{
  "name": "@putstack/root",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Putro",
  "description": "Root package for @putstack/* configuration packages that are also generally released standalone",
  "repository": "https://github.com/Pewtro/configs",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^20.9 || ^22"
  },
  "packageManager": "pnpm@9.15.4",
  "devDependencies": {
    "@changesets/cli": "2.27.11",
    "@putstack/eslint-config-typescript": "workspace:*",
    "@putstack/prettier-config": "workspace:*",
    "@types/node": "22.10.7",
    "@vitest/coverage-v8": "3.0.2",
    "@vitest/ui": "3.0.2",
    "eslint": "9.18.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.1",
    "npm-run-all2": "7.0.2",
    "prettier": "3.4.2",
    "tsup": "8.3.5",
    "turbo": "2.3.3",
    "typescript": "5.7.3",
    "typescript-eslint": "8.20.0",
    "vitest": "3.0.2"
  },
  "scripts": {
    "build": "turbo build",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "release": "changeset publish",
    "stylecheck": "prettier --check .",
    "test": "vitest run",
    "test:ci": "npm-run-all -p -l lint typecheck stylecheck test",
    "test:coverage": "pnpm run test --coverage",
    "test:ui": "vitest --ui --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "pnpm --silent lint:fix"
    ]
  }
}
