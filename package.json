{
  "name": "@putstack/root",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Putro",
  "description": "Root package for @putstack/* configuration packages that are also generally released standalone",
  "repository": "https://github.com/Pewtro/configs",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^20.18 || >=22"
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@changesets/cli": "2.29.4",
    "@putstack/eslint-config-typescript": "workspace:*",
    "@putstack/prettier-config": "workspace:*",
    "@types/node": "22.15.30",
    "@vitest/coverage-v8": "3.2.2",
    "@vitest/ui": "3.2.2",
    "eslint": "9.28.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.5.3",
    "tsdown": "0.12.7",
    "turbo": "2.5.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.33.1",
    "vitest": "3.2.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "scripts": {
    "build": "turbo build",
    "lint": "eslint --format stylish --max-warnings 0 --cache",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "release": "changeset publish",
    "stylecheck": "prettier --check .",
    "test": "vitest run",
    "test:ci": "npm-run-all -p -l \"lint .\" typecheck stylecheck test",
    "test:coverage": "pnpm run test --coverage",
    "test:ui": "vitest --ui --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "pnpm --silent lint:fix"
    ]
  }
}
